<div class="users section">
  <h2>谁在用 Ember.js？</h2>

  <div class="surround">
    <ul id="slider">
    <% data.users.each do |user| %>
      <li class="user">
        <a href="<%= user.url %>">
          <img src="/images/about/<%= user.image %>">
        </a>
      </li>
    <% end %>
    <% gap = 4 - data.users.length % 4 %>
    <% if gap < 4 %>
      <% gap.times do %>
        <li class="user empty"></li>
      <% end %>
    <% end %>
    </ul>
  </div>

